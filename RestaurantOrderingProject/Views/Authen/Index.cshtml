@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/css/logincss/fonts/material-icon/css/material-design-iconic-font.min.css" />
    <link rel="stylesheet" href="~/css/logincss/css/style.css" />

    @Html.Partial("~/Views/Shared/_Head.cshtml")
</head>
<body>
    <div class="main" style="padding: 0px;">
        @Html.Partial("~/Views/Shared/_Header.cshtml")

        <section class="sign-in">
            <div class="container" style="margin-top: 50px;">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="~/css/logincss/images/photos.jpg" alt="sign in image" /></figure>
                     
                    </div>
                    <div class="signin-form">
                        <h2 class="form-title">Login</h2>

                        @if (ViewBag.Error != null)
                        {
                            <div style="color: red;">@ViewBag.Error</div>
                        }
                        <form asp-controller="Authen" asp-action="Login" method="post" class="register-form" id="login-form">
                       
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="email" name="email" id="email" placeholder="Your Email" required />
                            </div>
                            <div class="form-group">
                                <label for="password"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="password" id="password" placeholder="Password" required />
                            </div>
                            <div class="form-group">

                                <a asp-controller="Authen" asp-action="Signup" class="signup-image-link">Create an account</a>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                            </div>
                        
                            </form>
                       
                    </div>
                </div>
            </div>
        </section>

      

        <script src="~/css/logincss/vendor/jquery/jquery.min.js"></script>
        <script src="~/css/logincss/js/main.js"></script>
      
    </div>
</body>
</html>

