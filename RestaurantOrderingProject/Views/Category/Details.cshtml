@model RestaurantOrderingProject.Models.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">📖 Category Details</h2>

    <div class="card shadow-sm p-3">
        <h5 class="card-title">Category Info</h5>
        <hr />
        <dl class="row mb-0">
            <dt class="col-sm-3 text-muted">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class="col-sm-9 fw-bold">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
        </dl>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning btn-sm">Edit</a>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
    </div>
</div>
