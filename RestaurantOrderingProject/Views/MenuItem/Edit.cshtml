@model RestaurantOrderingProject.Models.MenuItem
@{
    ViewData["Title"] = "Sửa Món Ăn";
}

<style>
    .edit-form-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        position: relative;
    }

    .form-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        padding: 3rem;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.3);
        position: relative;
        overflow: hidden;
    }

        .form-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #f5576c);
            background-size: 200% 100%;
            animation: shimmer 3s ease-in-out infinite;
        }

    @@eyframes shimmer {
        0%, 100%

    {
        background-position: 200% 0;
    }

    50% {
        background-position: -200% 0;
    }

    }

    .form-title {
        text-align: center;
        color: #2d3748;
        font-size: 2.8rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        position: relative;
    }

        .form-title::after {
            content: '✏️';
            position: absolute;
            top: -10px;
            right: -50px;
            font-size: 2rem;
            animation: bounce 2s ease-in-out infinite;
        }

    @@eyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }

    }

    .form-subtitle {
        text-align: center;
        color: #718096;
        margin-bottom: 2.5rem;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .alert {
        border: none;
        border-radius: 15px;
        padding: 1.25rem 1.5rem;
        margin-bottom: 2rem;
        font-weight: 500;
        position: relative;
        overflow: hidden;
    }

    .alert-success {
        background: linear-gradient(135deg, #48bb78, #38a169);
        color: white;
        box-shadow: 0 8px 25px rgba(72, 187, 120, 0.3);
        animation: slideDown 0.5s ease-out;
    }

        .alert-success::before {
            content: '✅';
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
        }

    .alert-success {
        padding-left: 3.5rem;
    }

    @@eyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .form-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
    }

    @@media (min-width: 768px) {
        .form-grid

    {
        grid-template-columns: 1fr 1fr;
    }

    .form-group.full-width {
        grid-column: 1 / -1;
    }

    }

    .form-group {
        position: relative;
        margin-bottom: 0;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.75rem;
            color: #2d3748;
            font-weight: 600;
            font-size: 1rem;
            transition: color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .form-control {
        width: 100%;
        padding: 1.25rem 1.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 15px;
        font-size: 1rem;
        transition: all 0.4s ease;
        background: #fff;
        box-sizing: border-box;
        position: relative;
    }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
            transform: translateY(-2px);
            background: #fafafa;
        }

        .form-control:hover:not(:focus) {
            border-color: #cbd5e0;
            background: #f9f9f9;
        }

    textarea.form-control {
        min-height: 140px;
        resize: vertical;
        font-family: inherit;
        line-height: 1.6;
    }

    select.form-control {
        cursor: pointer;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23667eea' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 1.5rem center;
        background-repeat: no-repeat;
        background-size: 1.5em 1.5em;
        padding-right: 4rem;
        appearance: none;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem 0;
        background: rgba(102, 126, 234, 0.05);
        border-radius: 15px;
        padding-left: 1.5rem;
        margin-top: 1rem;
    }

    .form-check-input {
        width: 1.5rem;
        height: 1.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        appearance: none;
        background: #fff;
        position: relative;
        margin: 0;
    }

        .form-check-input:checked {
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-color: #667eea;
            transform: scale(1.1);
        }

            .form-check-input:checked::after {
                content: '✓';
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                color: white;
                font-size: 1rem;
                font-weight: bold;
            }

        .form-check-input:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
        }

    .form-check-label {
        margin: 0;
        cursor: pointer;
        user-select: none;
        font-weight: 600;
        color: #4a5568;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .text-danger {
        color: #e53e3e;
        font-size: 0.9rem;
        margin-top: 0.75rem;
        display: block;
        font-weight: 500;
        padding-left: 0.5rem;
    }

    .button-group {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        margin-top: 3rem;
        flex-wrap: wrap;
    }

    .btn {
        padding: 1.25rem 2.5rem;
        border: none;
        border-radius: 15px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.4s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 160px;
        position: relative;
        overflow: hidden;
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.6);
        }

        .btn-primary:active {
            transform: translateY(-1px);
        }

    .btn-secondary {
        background: #f7fafc;
        color: #4a5568;
        border: 2px solid #e2e8f0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        .btn-secondary:hover {
            background: #edf2f7;
            border-color: #cbd5e0;
            transform: translateY(-2px);
            color: #2d3748;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .floating-elements {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .floating-element {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        animation: float 8s ease-in-out infinite;
    }

        .floating-element:nth-child(1) {
            width: 120px;
            height: 120px;
            top: 5%;
            left: 5%;
            animation-delay: 0s;
        }

        .floating-element:nth-child(2) {
            width: 80px;
            height: 80px;
            top: 15%;
            right: 10%;
            animation-delay: 3s;
        }

        .floating-element:nth-child(3) {
            width: 100px;
            height: 100px;
            bottom: 10%;
            left: 15%;
            animation-delay: 6s;
        }

        .floating-element:nth-child(4) {
            width: 60px;
            height: 60px;
            bottom: 20%;
            right: 20%;
            animation-delay: 4s;
        }

    @@eyframes float {
        0%, 100%

    {
        transform: translateY(0px) rotate(0deg);
        opacity: 0.1;
    }

    50% {
        transform: translateY(-30px) rotate(180deg);
        opacity: 0.3;
    }

    }

    .form-card {
        position: relative;
        z-index: 1;
    }

    .validation-summary {
        background: linear-gradient(135deg, #fed7d7, #feb2b2);
        border: 2px solid #f56565;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        color: #742a2a;
        font-weight: 500;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 1.5rem;
        }

    @@media (max-width: 768px) {
        .edit-form-container

    {
        padding: 1rem;
    }

    .form-card {
        padding: 2rem 1.5rem;
    }

    .form-title {
        font-size: 2.2rem;
    }

        .form-title::after {
            right: -30px;
            font-size: 1.5rem;
        }

    .button-group {
        flex-direction: column;
    }

    .btn {
        width: 100%;
    }

    .form-grid {
        gap: 1.5rem;
    }

    }
</style>

<div class="edit-form-container">
    <div class="floating-elements">
        <div class="floating-element"></div>
        <div class="floating-element"></div>
        <div class="floating-element"></div>
        <div class="floating-element"></div>
    </div>

    <div class="form-card">
        <h2 class="form-title">Sửa Món Ăn</h2>
        <p class="form-subtitle">Cập nhật thông tin món ăn trong thực đơn</p>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Name">
                        <span>🍽️</span> Tên món ăn
                    </label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên món ăn..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price">
                        <span>💰</span> Giá (VNĐ)
                    </label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId">
                        <span>📂</span> Danh Mục
                    </label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                        <option value="">Chọn danh mục</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl">
                        <span>🖼️</span> URL Hình Ảnh
                    </label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group full-width">
                    <label asp-for="Description">
                        <span>📝</span> Mô Tả
                    </label>
                    <textarea asp-for="Description" class="form-control" placeholder="Mô tả chi tiết về món ăn..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group full-width">
                    <div class="form-check">
                        <input asp-for="IsAvailable" type="checkbox" class="form-check-input" />
                        <label asp-for="IsAvailable" class="form-check-label">
                            <span>✅</span> Món ăn có sẵn
                        </label>
                    </div>
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
            </div>

            <div class="button-group">
                <button type="submit" class="btn btn-primary">
                    💾 Lưu Thay Đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    ↩️ Quay Lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}